= simple_form_for(@accepted_challenge) do |f|
  = f.error_notification

  .form-inputs
    .large-3.medium-3.small-6= f.association :player
    .large-6.medium-3.small-6= f.association :challenge, label_method: :description
    .large-3.medium-3.small-6= f.input :comments
    = f.input :active
    %hr

  .form-actions
    = f.button :submit
